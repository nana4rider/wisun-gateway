{
  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "runtimeExecutable": "${env:NVM_BIN}${env:NVM_SYMLINK}/npm",
      "args": ["run", "dev"],
      "name": "Local Debug",
      "cwd": "${workspaceFolder}",
      "skipFiles": ["<node_internals>/**"],
      "console": "integratedTerminal"
    },
    {
      "type": "node",
      "request": "attach",
      "name": "Remote Debug",
      "address": "manager",
      "port": 9229,
      "remoteRoot": "/app",
      "localRoot": "${workspaceFolder}"
    }
  ]
}
